      "source": [
        "<h1>Data Exploration and Risk Clause Detection</h1>"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 1,
      "metadata": {},
      "outputs": [],
      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "from sklearn.feature_extraction.text import TfidfVectorizer\n",
        "from sklearn.ensemble import RandomForestClassifier\n",
        "from sklearn.model_selection import train_test_split\n",
        "from sklearn.metrics import classification_report\n",
        "\n",
        "df = pd.read_csv('../data/processed/cleaned_legal_clauses.csv')\n",
        "df.dropna(subset=['cleaned_text', 'clause_status'], inplace=True)\n",
        "df.head()"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 2,
      "metadata": {},
      "outputs": [],
      "source": [
        "print(\"Class Distribution:\")\n",
        "print(df['clause_status'].value_counts())"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 3,
      "metadata": {},
      "outputs": [],
      "source": [
        "vectorizer = TfidfVectorizer(max_features=1000, stop_words='english')\n",
        "X_tfidf = vectorizer.fit_transform(df['cleaned_text'])\n",
        "feature_names = vectorizer.get_feature_names_out()\n",
        "\n",
        "risky_indices = df[df['clause_status'] == 1].index\n",
        "safe_indices = df[df['clause_status'] == 0].index\n",
        "\n",
        "risky_tfidf_mean = X_tfidf[risky_indices].mean(axis=0)\n",
        "safe_tfidf_mean = X_tfidf[safe_indices].mean(axis=0)\n",
        "\n",
        "risky_mean_array = np.array(risky_tfidf_mean).flatten()\n",
        "safe_mean_array = np.array(safe_tfidf_mean).flatten()\n",
        "\n",
        "top_risky_indices = risky_mean_array.argsort()[-20:][::-1]\n",
        "print(\"Top words indicating risk in clauses:\")\n",
        "for idx in top_risky_indices:\n",
        "    print(f\"{feature_names[idx]}: {risky_mean_array[idx]:.4f}\")"
      ]
    },
